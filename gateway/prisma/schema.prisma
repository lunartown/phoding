generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatLog {
  id          String   @id @default(uuid())
  sessionId   String
  instruction String   @db.Text
  operations  Json
  logs        String[] @default([])
  status      String   // 'success' | 'error'
  error       String?  @db.Text
  createdAt   DateTime @default(now())

  @@index([sessionId])
  @@index([createdAt])
  @@map("chat_logs")
}
